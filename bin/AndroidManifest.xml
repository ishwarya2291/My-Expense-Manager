<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iswarya.myexpensemanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iswarya.myexpensemanager.MyExpenseManagerMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.EditExpenseActivity"
            android:label="@string/title_activity_edit_expense" >
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.AllExpensesActivity"
            android:label="@string/title_activity_all_expenses" >
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.StartupActivity"
            android:label="@string/title_activity_startup" >
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.ReportsActivity"
            android:label="@string/title_activity_reports" >
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.ShowExpenseActivity"
            android:label="@string/title_activity_show_expense" >
        </activity>
        <activity
            android:name="com.iswarya.myexpensemanager.ImageActivity"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.FullScreen" >
        </activity>
    </application>

</manifest>
